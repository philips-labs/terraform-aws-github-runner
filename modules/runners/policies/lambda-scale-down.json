{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeInstances*",
        "ec2:DescribeTags"
      ],
      "Resource": ["*"]
    },
    {
      "Effect": "Allow",
      "Action": [
        "ec2:TerminateInstances"
      ],
      "Resource": ["*"],
      "Condition": {
        "StringEquals": {
          "ec2:ResourceTag/Application": "github-action-runner"
        }
      }
    }
  ]
}
